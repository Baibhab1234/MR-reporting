<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <filter>
        <filter-name>authFilter</filter-name>
        <filter-class>Org.MrReporting.Shamik.Filter.filter</filter-class>
        <init-param>
            <param-name>avoid-urls</param-name>
            <param-value>/favicon.ico,/login,/login.jsp,/styles/style.css,/images/button-bg.png,/images/login-page-bg.jpg</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>authFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <listener>
        <description>Context listener</description>
        <listener-class>Listener.ApplicationListener</listener-class>
    </listener>
    <listener>
        <description>Session Listener</description>
        <listener-class>Listener.SessionListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>Org.MrReporting.Shamik.Login.login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>selectDoctor</servlet-name>
        <servlet-class>Org.MrReporting.Shamik.Ajax.selectDoctor</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>storeDcr</servlet-name>
        <servlet-class>Org.MrReporting.Shamik.Servlets.storeDcr</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>selectMedicine</servlet-name>
        <servlet-class>Org.MrReporting.Shamik.Ajax.selectMedicine</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>selectChemist</servlet-name>
        <servlet-class>Org.MrReporting.Shamik.Ajax.selectChemist</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>storeCcr</servlet-name>
        <servlet-class>Org.MrReporting.Shamik.Servlets.storeCcr</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>Org.MrReporting.Shamik.Servlets.logout</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>selectDoctor</servlet-name>
        <url-pattern>/selectDoctor</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>storeDcr</servlet-name>
        <url-pattern>/storeDcr</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>selectMedicine</servlet-name>
        <url-pattern>/selectMedicine</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>selectChemist</servlet-name>
        <url-pattern>/selectChemist</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>storeCcr</servlet-name>
        <url-pattern>/storeCcr</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
</web-app>
